@code {
    private List<GetOrdersByFilterResponse> filteredOrders = new();
    private List<ServiceDto> availableServices = new();
    private EmployeeDto? currentUser;
    private bool isLoading = false;
    private int totalOrdersCount = 0;

    // Filter properties
    private string searchClient = string.Empty;
    private DateTime? dateFrom = null;
    private DateTime? dateTo = null;
    private string selectedStatus = string.Empty;
    private string selectedPaymentType = string.Empty;
    private List<int> selectedServiceIds = new();
    
    // Dropdown state
    private bool isServicesDropdownOpen = false;
    private string serviceSearchTerm = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            // Get current user
            currentUser = await LocalStorageService.GetItemAsync<EmployeeDto>("user");

            // Load available services for filter
            var parameters = await ApiService.GetCreateOrderParameters();
            availableServices = parameters?.ServiceDtos ?? new List<ServiceDto>();

            // Load orders with filters
            await ApplyFilters();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading orders: {ex.Message}");
            filteredOrders = new List<GetOrdersByFilterResponse>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ApplyFilters()
    {
        if (currentUser == null)
        {
            filteredOrders = new List<GetOrdersByFilterResponse>();
            totalOrdersCount = 0;
            return;
        }

        isLoading = true;
        try
        {
            // –°–æ–∑–¥–∞–µ–º –∑–∞–ø—Ä–æ—Å —Å —Ñ–∏–ª—å—Ç—Ä–∞–º–∏
            var request = new GetOrdersByFilterRequest
            {
                DateFrom = dateFrom,
                DateTo = dateTo,
                ClientSearchTerm = string.IsNullOrWhiteSpace(searchClient) ? null : searchClient,
                CreatedEmployeeIds = new List<int> { currentUser.Id } // –§–∏–ª—å—Ç—Ä—É–µ–º —Ç–æ–ª—å–∫–æ –∑–∞—è–≤–∫–∏ —Ç–µ–∫—É—â–µ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
            };

            // –î–æ–±–∞–≤–ª—è–µ–º —Å—Ç–∞—Ç—É—Å –µ—Å–ª–∏ –≤—ã–±—Ä–∞–Ω
            if (!string.IsNullOrEmpty(selectedStatus))
            {
                var status = (OrderStatus)Enum.Parse(typeof(OrderStatus), selectedStatus);
                request.Statuses = new List<OrderStatus> { status };
            }

            // –î–æ–±–∞–≤–ª—è–µ–º —Ç–∏–ø –æ–ø–ª–∞—Ç—ã –µ—Å–ª–∏ –≤—ã–±—Ä–∞–Ω
            if (!string.IsNullOrEmpty(selectedPaymentType))
            {
                var paymentType = (PaymentType)Enum.Parse(typeof(PaymentType), selectedPaymentType);
                request.PaymentTypes = new List<PaymentType> { paymentType };
            }

            // –î–æ–±–∞–≤–ª—è–µ–º —É—Å–ª—É–≥–∏ –µ—Å–ª–∏ –≤—ã–±—Ä–∞–Ω—ã
            if (selectedServiceIds.Any())
            {
                request.ServiceIds = selectedServiceIds.ToList();
            }

            // –ü–æ–ª—É—á–∞–µ–º –æ—Ç—Ñ–∏–ª—å—Ç—Ä–æ–≤–∞–Ω–Ω—ã–µ –∑–∞—è–≤–∫–∏ —Å —Å–µ—Ä–≤–µ—Ä–∞
            filteredOrders = await ApiService.GetOrdersByFilter(request);

            // –ó–∞–≥—Ä—É–∂–∞–µ–º –æ–±—â–µ–µ –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ –∑–∞—è–≤–æ–∫ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è (–±–µ–∑ —Ñ–∏–ª—å—Ç—Ä–æ–≤) –¥–ª—è –æ—Ç–æ–±—Ä–∞–∂–µ–Ω–∏—è
            if (totalOrdersCount == 0 && !HasActiveFilters())
            {
                totalOrdersCount = filteredOrders.Count;
            }
            else if (!HasActiveFilters())
            {
                totalOrdersCount = filteredOrders.Count;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error applying filters: {ex.Message}");
            filteredOrders = new List<GetOrdersByFilterResponse>();
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task ResetFilters()
    {
        searchClient = string.Empty;
        dateFrom = null;
        dateTo = null;
        selectedStatus = string.Empty;
        selectedPaymentType = string.Empty;
        selectedServiceIds.Clear();
        await ApplyFilters();
    }

    private bool HasActiveFilters()
    {
        return !string.IsNullOrWhiteSpace(searchClient) ||
               dateFrom.HasValue ||
               dateTo.HasValue ||
               !string.IsNullOrEmpty(selectedStatus) ||
               !string.IsNullOrEmpty(selectedPaymentType) ||
               selectedServiceIds.Any();
    }

    private void ToggleService(int serviceId, object? checkedValue)
    {
        var isChecked = checkedValue is bool b && b;
        
        if (isChecked)
        {
            if (!selectedServiceIds.Contains(serviceId))
            {
                selectedServiceIds.Add(serviceId);
            }
        }
        else
        {
            selectedServiceIds.Remove(serviceId);
        }
        
        // –¢–æ–ª—å–∫–æ –æ–±–Ω–æ–≤–ª—è–µ–º UI, –ù–ï –ø—Ä–∏–º–µ–Ω—è–µ–º —Ñ–∏–ª—å—Ç—Ä—ã
    }

    private async Task RemoveService(int serviceId)
    {
        selectedServiceIds.Remove(serviceId);
        await ApplyFilters();
    }

    private void ToggleServicesDropdown()
    {
        isServicesDropdownOpen = !isServicesDropdownOpen;
        if (!isServicesDropdownOpen)
        {
            serviceSearchTerm = string.Empty;
        }
    }

    private async Task ApplyServicesFilter()
    {
        isServicesDropdownOpen = false;
        serviceSearchTerm = string.Empty;
        await ApplyFilters();
    }

    private async Task ClearAllServices()
    {
        selectedServiceIds.Clear();
        isServicesDropdownOpen = false;
        serviceSearchTerm = string.Empty;
        await ApplyFilters();
    }

    private List<ServiceDto> GetFilteredServices()
    {
        if (string.IsNullOrWhiteSpace(serviceSearchTerm))
        {
            return availableServices;
        }

        return availableServices
            .Where(s => s.Name.Contains(serviceSearchTerm, StringComparison.OrdinalIgnoreCase))
            .ToList();
    }

    private void CloseAllDropdowns()
    {
        if (isServicesDropdownOpen)
        {
            isServicesDropdownOpen = false;
            serviceSearchTerm = string.Empty;
        }
    }

    private void OpenOrder(int orderId)
    {
        Navigation.NavigateTo($"/order/{orderId}");
    }

    private string GetOrderStatusDescription(OrderStatus orderStatus)
    {
        return orderStatus switch
        {
            OrderStatus.Created => "–°–æ–∑–¥–∞–Ω",
            OrderStatus.ApprovedWithEmployers => "–ü–æ–¥—Ç–≤–µ—Ä–∂–¥–µ–Ω —Å–æ—Ç—Ä—É–¥–Ω–∏–∫–∞–º–∏",
            OrderStatus.Processing => "–í —Ä–∞–±–æ—Ç–µ",
            OrderStatus.Finished => "–ó–∞–≤–µ—Ä—à–µ–Ω",
            OrderStatus.CreatingInvoice => "–û–∂–∏–¥–∞–Ω–∏–µ —Å—á–µ—Ç–∞",
            OrderStatus.AwaitingPayment => "–û–∂–∏–¥–∞–Ω–∏–µ –æ–ø–ª–∞—Ç—ã",
            OrderStatus.Closed => "–ó–∞–∫—Ä—ã—Ç",
            _ => "–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ"
        };
    }

    private string GetPaymentTypeDescription(PaymentType paymentType)
    {
        return paymentType switch
        {
            PaymentType.None => "–ù–µ —É–∫–∞–∑–∞–Ω",
            PaymentType.Cash => "–ù–∞–ª–∏—á–Ω—ã–µ",
            PaymentType.Electronic => "–°–ë–ü",
            PaymentType.Card => "–ö–∞—Ä—Ç–∞",
            PaymentType.CashWithVat => "–ù–∞–ª–∏—á–Ω—ã–µ —Å –ù–î–°",
            PaymentType.CashWithoutVat => "–ù–∞–ª–∏—á–Ω—ã–µ –±–µ–∑ –ù–î–°",
            _ => "–ù–µ–∏–∑–≤–µ—Å—Ç–Ω–æ"
        };
    }
}

