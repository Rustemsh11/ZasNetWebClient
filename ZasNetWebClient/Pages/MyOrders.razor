                            </div>
                            <div class="order-info-item">
                                <span class="info-label">–°—É–º–º–∞:</span>
                                <span class="info-value price">@order.OrderPriceAmount.ToString("C")</span>
                            </div>
                        </div>

                        @if (order.ServiceNames.Any())
                        {
