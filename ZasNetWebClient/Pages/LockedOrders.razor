@code {
    private List<GetLockedOrdersResponse> lockedOrders = new();
    private bool isLoading = false;
    private bool isResetting = false;
    private int resettingOrderId = 0;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            lockedOrders = await ApiService.GetLockedOrders();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading locked orders: {ex.Message}");
            lockedOrders = new List<GetLockedOrdersResponse>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private void OpenOrder(int orderId)
    {
        Navigation.NavigateTo($"/order/{orderId}");
    }

    private async Task ResetLock(int orderId)
    {
        if (isResetting)
            return;

        isResetting = true;
        resettingOrderId = orderId;
        
        try
        {
            var success = await ApiService.ResetLockedOrder(orderId);

            if (success)
            {
                NotificationService.ShowInfo($"–ë–ª–æ–∫–∏—Ä–æ–≤–∫–∞ –∑–∞—è–≤–∫–∏ #{orderId} —É—Å–ø–µ—à–Ω–æ —Å–±—Ä–æ—à–µ–Ω–∞");
                // –£–¥–∞–ª—è–µ–º –∑–∞—è–≤–∫—É –∏–∑ —Å–ø–∏—Å–∫–∞
                var orderToRemove = lockedOrders.FirstOrDefault(o => o.Id == orderId);
                if (orderToRemove != null)
                {
                    lockedOrders.Remove(orderToRemove);
                }
                StateHasChanged();
            }
            else
            {
                NotificationService.ShowError($"–ù–µ —É–¥–∞–ª–æ—Å—å —Å–±—Ä–æ—Å–∏—Ç—å –±–ª–æ–∫–∏—Ä–æ–≤–∫—É –∑–∞—è–≤–∫–∏ #{orderId}");
            }
        }
        catch (Exception ex)
        {
            NotificationService.ShowError($"–û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–±—Ä–æ—Å–µ –±–ª–æ–∫–∏—Ä–æ–≤–∫–∏: {ex.Message}");
        }
        finally
        {
            isResetting = false;
            resettingOrderId = 0;
        }
    }
}

