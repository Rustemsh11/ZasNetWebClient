@page "/"
@using ZasNetWebClient.Services
@using ZasNetWebClient.Models
@using ZasNetWebClient.Components
@using Blazored.LocalStorage
@inject ILocalStorageService LocalStorageService
@inject AuthService AuthService
@inject ApiService ApiService
@inject NavigationManager Navigation

<PageTitle>Активные заявки - ZasNet</PageTitle>

<div class="page-header">
    <div class="header-content">
        <div>
            <h1>Активные заявки по дням</h1>
        </div>
        @if (!isAccountantRole)
        {
            <button class="btn-primary" @onclick="@(() => Navigation.NavigateTo("/order", false))">
                <span>+</span> Создать заявку
            </button>
        }
    </div>
</div>

@if (isLoading)
{
    <div class="loading">
        <div class="spinner"></div>
        <p>Загрузка заявок...</p>
    </div>
}
else
{
    <CalendarView Orders="orders" AllCars="allCars" />
}

@code {
    private List<Order> orders = new();
    private List<CarDto> allCars = new();
    private bool isLoading = false;
    private bool isAccountantRole = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUserRole();
        await LoadData();
    }

    private async Task LoadUserRole()
    {
        try
        {
            var currentUser = await LocalStorageService.GetItemAsync<EmployeeDto>("user");
            isAccountantRole = currentUser.Role != null && currentUser.Role.Name.Equals("Бухгалтер", StringComparison.OrdinalIgnoreCase);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading user role: {ex.Message}");
            isAccountantRole = false;
        }
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            var ordersTask = ApiService.GetAllOrders();
            var carsTask = ApiService.GetAllActiveCars();
            
            await Task.WhenAll(ordersTask, carsTask);
            
            orders = await ordersTask;
            allCars = await carsTask;
        }
        catch
        {
            orders = new List<Order>();
            allCars = new List<CarDto>();
        }
        finally
        {
            isLoading = false;
        }
    }
}
