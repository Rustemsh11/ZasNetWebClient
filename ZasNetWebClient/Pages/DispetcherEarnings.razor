    private void CalculateEarning(ChangeEventArgs e)
    {
        if (editingEarning == null) return;

        if (decimal.TryParse(e.Value?.ToString(), out decimal percent))
        {
            editPercent = percent;
            editEarning = Math.Round(editingEarning.OrderTotalPrice * percent / 100, 2);
            StateHasChanged();
        }
    }

    private void CalculatePercent(ChangeEventArgs e)
    {
        if (editingEarning == null) return;

        if (decimal.TryParse(e.Value?.ToString(), out decimal earning))
        {
            editEarning = earning;
            if (editingEarning.OrderTotalPrice > 0)
            {
                editPercent = Math.Round(earning * 100 / editingEarning.OrderTotalPrice, 2);
            }
            StateHasChanged();
        }
    }

    private async Task SaveDispetcherEarning()
    {
        if (editingEarning == null) return;

        // Validation
        if (editPercent < 0 || editPercent > 100)
        {
            editErrorMessage = "–ü—Ä–æ—Ü–µ–Ω—Ç –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –æ—Ç 0 –¥–æ 100";
            return;
        }

        if (editEarning < 0)
        {
            editErrorMessage = "–ó–∞—Ä–∞–±–æ—Ç–æ–∫ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –æ—Ç—Ä–∏—Ü–∞—Ç–µ–ª—å–Ω—ã–º";
            return;
        }

        isSaving = true;
        editErrorMessage = string.Empty;
        StateHasChanged();

        try
        {
            var request = new DispetcherEarningUpdateCommand
            {
                EmployeeEarningDto = new EmployeeEarningDto()
                {
                    EmployeeEarningId = editingEarning.Id,
                    ServiceEmployeePrecent = editPercent,
                    EmployeeEarning = editEarning,
                    PrecentEmployeeDescription = string.IsNullOrWhiteSpace(editDescription) ? null : editDescription
                },
            };

            var success = await ApiService.UpdateDispetcherEarning(request);

            if (success)
            {
                // Update the local data
                editingEarning.DispetcherPrecent = editPercent;
                editingEarning.DispetcherEarning = editEarning;
                editingEarning.PrecentDispetcherDescription = editDescription;

                // Recalculate total earnings
                totalEarnings = earnings.Sum(e => e.DispetcherEarning);

                CloseEditModal();
            }
            else
            {
                editErrorMessage = "–û—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏. –ü–æ–ø—Ä–æ–±—É–π—Ç–µ —Å–Ω–æ–≤–∞.";
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving dispatcher earning: {ex.Message}");
            editErrorMessage = "–ü—Ä–æ–∏–∑–æ—à–ª–∞ –æ—à–∏–±–∫–∞ –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏.";
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task DownloadReport()
    {
        if (selectedDispetcherIds.Count != 1 || earnings.Count == 0)
        {
            return;
        }

        isDownloadingReport = true;
        StateHasChanged();

        try
        {
            var reportData = await ApiService.DownloadDispetcherEarningReport(earnings);

            if (reportData != null && reportData.Length > 0)
            {
                // Get dispetcher name for filename
                var dispetcherName = availableDispetchers.FirstOrDefault(e => e.Id == selectedDispetcherIds[0])?.Name ?? "–î–∏—Å–ø–µ—Ç—á–µ—Ä";
                var fileName = $"–û—Ç—á–µ—Ç_{dispetcherName}_{GetMonthName(selectedMonth)}_{selectedYear}.pdf";

                // Trigger download using JavaScript
                var base64 = Convert.ToBase64String(reportData);
                await JSRuntime.InvokeVoidAsync("downloadFile", fileName, base64);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error downloading report: {ex.Message}");
        }
        finally
        {
            isDownloadingReport = false;
            StateHasChanged();
        }
    }

