@code {
    private enum ViewMode
    {
        Cards,
        List
    }

    private List<DispetcherEarningByFilterDto> earnings = new();
    private List<EmployeeDto> availableDispetchers = new();
    private bool isLoading = false;
    private decimal totalEarnings = 0;
    private ViewMode viewMode = ViewMode.Cards;

    // Filter properties
    private int selectedMonth = DateTime.Now.Month;
    private int selectedYear = DateTime.Now.Year;
    private string searchClient = string.Empty;
    private DateTime? dateFrom = null;
    private DateTime? dateTo = null;
    private List<int> selectedDispetcherIds = new();
    
    // Dropdown state
    private bool isDispetchersDropdownOpen = false;
    private string dispetcherSearchTerm = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;
        try
        {
            availableDispetchers = await ApiService.GetDispetchers();

            // Load earnings with filters
            await ApplyFilters();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading data: {ex.Message}");
            earnings = new List<DispetcherEarningByFilterDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ApplyFilters()
    {
        isLoading = true;
        try
        {
            // –°–æ–∑–¥–∞–µ–º –∑–∞–ø—Ä–æ—Å —Å —Ñ–∏–ª—å—Ç—Ä–∞–º–∏
            var request = new GetDispetcherEarningByMounthRequest
