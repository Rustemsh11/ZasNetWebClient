@using System.Globalization
@using System.Timers
@inject HttpClient httpClient

<div class="service-dialog @(IsVisible ? "visible" : "")">
    <div class="dialog-overlay" @onclick="Close"></div>
    <div class="dialog-content" style="width:80vw; height:80vh; max-width:80vw; max-height:80vh;">
        <div class="dialog-header">
            <h3>Просмотр изображения</h3>
            <button class="btn-close" @onclick="Close">&times;</button>
        </div>
        <div class="dialog-body" style="display:flex; flex-direction:column; height:calc(100% - 0px); padding-top:0;">
            <div style="flex:1 1 auto; overflow:hidden; background:#111; border-radius:6px; position:relative; display:flex; align-items:center; justify-content:center;">
                <div>
                    @if (!string.IsNullOrEmpty(ImageViewUrl))
                    {
                        var address = $"{httpClient.BaseAddress}{ImageViewUrl}";
                        <img src="@address" 
                             alt="Изображение документа"
                             style="display:block; max-width:100%; max-height:100%;" />
                    }
                </div>
            </div>
            <div class="dialog-actions" style="margin-top:10px; display:flex; gap:8px; flex-wrap:wrap;">
                @if (!string.IsNullOrEmpty(DownloadUrl))
                {
                    var address = $"{httpClient.BaseAddress}{DownloadUrl}";
                    <a class="btn-primary" href="@address" download>Скачать</a>
                }
                <button type="button" class="btn-secondary" @onclick="Close">Закрыть</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public string? ImageViewUrl { get; set; }
    [Parameter] public string? DownloadUrl { get; set; }

    private async Task Close()
    {
        await OnClose.InvokeAsync();
    }

}


